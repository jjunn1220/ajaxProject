<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>web</display-name>
  
  
  <servlet>
  	<servlet-name>feedList</servlet-name>
  	<servlet-class>controller.FeedListController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>feedList</servlet-name>
  	<url-pattern>/html/feedList.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>join</servlet-name>
  	<servlet-class>controller.JoinController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>join</servlet-name>
  	<url-pattern>/html/join.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/html/login.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>logout</servlet-name>
  	<servlet-class>controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>logout</servlet-name>
  	<url-pattern>/html/logout.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>add</servlet-name>
  	<servlet-class>controller.AddController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>add</servlet-name>
  	<url-pattern>/html/add.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>detail</servlet-name>
  	<servlet-class>controller.DetailController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>detail</servlet-name>
  	<url-pattern>/html/detail.do</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>comment</servlet-name>
  	<servlet-class>controller.CommentController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>comment</servlet-name>
  	<url-pattern>/html/comment.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>delete</servlet-name>
  	<servlet-class>controller.DeleteController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>delete</servlet-name>
  	<url-pattern>/html/delete.do</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>update</servlet-name>
  	<servlet-class>controller.UpdateController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>update</servlet-name>
  	<url-pattern>/html/update.do</url-pattern>
  </servlet-mapping>
  

 <filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
</filter-mapping>
</web-app>